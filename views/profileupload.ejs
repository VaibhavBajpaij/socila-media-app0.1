<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Profile Picture - SocialSphere</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-gradient-to-br from-gray-50 to-blue-100 min-h-screen text-gray-700">

    <!-- Navigation Bar -->
    <nav class="w-full py-4 px-6 md:px-8 flex justify-between items-center bg-white/90 backdrop-blur-lg shadow-sm sticky top-0 z-50 border-b border-gray-200">
        <a href="/profile" class="text-2xl font-bold text-indigo-600 tracking-tighter flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-blue-500"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>
            SocialSphere
        </a>
        <a href="/profile" class="flex items-center text-sm font-medium text-gray-600 hover:text-indigo-600 transition-colors duration-300 group">
             <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2 transform group-hover:-translate-x-1 transition-transform duration-300"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>
            Back to Profile
        </a>
    </nav>

    <!-- Main Content Container -->
    <div class="container mx-auto px-4 py-8 sm:py-12 flex items-center justify-center min-h-[calc(100vh-80px)]">
        <div class="bg-white p-8 sm:p-10 rounded-2xl shadow-lg border border-gray-100 transition-all hover:shadow-xl duration-300 w-full max-w-2xl">
            
            <!-- Header Section -->
            <div class="text-center mb-8">
                <h1 class="text-3xl sm:text-4xl font-extrabold text-indigo-600">
                    Update Profile Picture
                </h1>
                <p class="text-gray-500 mt-2">Choose a new photo to upload.</p>
            </div>

            <!-- Upload Form -->
            <form autocomplete="off" action="/upload" method="POST" enctype="multipart/form-data" class="space-y-6">
                <div id="drop-zone" class="flex items-center justify-center p-8 border-2 border-dashed border-gray-300 rounded-xl transition-all duration-300 hover:border-indigo-500 hover:bg-gray-50">
                    <div id="upload-prompt" class="text-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="mx-auto mb-3 text-gray-400"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline points="17 8 12 3 7 8"></polyline><line x1="12" y1="3" x2="12" y2="15"></line></svg>
                        <p class="text-gray-500 mb-3 font-semibold">Click to upload or drag and drop</p>
                        <label for="image-upload" class="bg-white border border-gray-300 hover:bg-gray-100 text-gray-700 py-2 px-4 rounded-lg font-semibold transition-colors cursor-pointer text-sm">
                            Select Image
                        </label>
                        <input id="image-upload" type="file" name="image" class="hidden" required accept="image/png, image/jpeg, image/gif">
                    </div>
                    <div id="image-preview-container" class="hidden text-center">
                        <img id="image-preview" src="#" alt="Image Preview" class="max-h-40 rounded-lg mx-auto mb-4 shadow-md"/>
                        <p id="file-name" class="text-sm font-medium text-gray-700"></p>
                    </div>
                </div>
                
                <p class="text-xs text-gray-400 text-center">PNG, JPG, GIF up to 5MB</p>
                
                <div class="flex flex-col sm:flex-row justify-between gap-4 pt-4">
                    <a href="/profile" class="w-full sm:w-auto text-center bg-gray-200 hover:bg-gray-300 text-gray-700 py-2.5 px-6 rounded-lg font-medium transition-all duration-300 shadow-sm">
                        Cancel
                    </a>
                    <button type="submit" class="w-full sm:w-auto bg-gradient-to-r from-blue-500 to-indigo-600 text-white py-2.5 px-8 rounded-lg font-semibold hover:from-blue-600 hover:to-indigo-700 transition-all duration-300 shadow-md hover:shadow-lg transform hover:-translate-y-0.5">
                        Upload Picture
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        const dropZone = document.getElementById('drop-zone');
        const fileInput = document.getElementById('image-upload');
        const uploadPrompt = document.getElementById('upload-prompt');
        const imagePreviewContainer = document.getElementById('image-preview-container');
        const imagePreview = document.getElementById('image-preview');
        const fileNameDisplay = document.getElementById('file-name');

        function showPreview(file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                imagePreview.src = e.target.result;
                fileNameDisplay.textContent = file.name;
                uploadPrompt.classList.add('hidden');
                imagePreviewContainer.classList.remove('hidden');
            }
            reader.readAsDataURL(file);
        }

        fileInput.addEventListener('change', function(e) {
            if (e.target.files && e.target.files[0]) {
                showPreview(e.target.files[0]);
            }
        });

        dropZone.addEventListener('click', () => fileInput.click());

        dropZone.addEventListener('dragover', (e) => {
            e.preventDefault();
            dropZone.classList.add('border-indigo-500', 'bg-gray-50');
        });

        dropZone.addEventListener('dragleave', (e) => {
            e.preventDefault();
            dropZone.classList.remove('border-indigo-500', 'bg-gray-50');
        });

        dropZone.addEventListener('drop', (e) => {
            e.preventDefault();
            dropZone.classList.remove('border-indigo-500', 'bg-gray-50');
            if (e.dataTransfer.files && e.dataTransfer.files[0]) {
                fileInput.files = e.dataTransfer.files;
                showPreview(e.dataTransfer.files[0]);
            }
        });
    </script>
</body>
</html>
